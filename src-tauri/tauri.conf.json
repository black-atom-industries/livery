{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "livery",
  "version": "0.1.0",
  "identifier": "industries.black-atom.livery",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "deno task vite:dev",
    "beforeBuildCommand": "deno task vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "Livery",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
